header.padding-top
    a.logo.margin-bottom(href='#{localConfig.base_path}')
        img(src="#{localConfig.base_path}/images/upplication.png", alt="Upplication logo")

    a.icon-list
        span Menu
    nav.main-menu.uppercase.unstyled

        ul#sections
            include header-links

        ul.change-lang
            each lang in langs.codes
                li(data-lang="#{lang.language_country}")
                    a(href="#{lang.home}") #{lang.language_short_code}
    a.login.unstyled(href="#{$.external.dashboard.url}") #{$.external.dashboard.anchor} 