doctype
//if lt IE 7
  <html class="no-js lt-ie9 lt-ie8 lt-ie7">
//if IE 7
  <html class="no-js lt-ie9 lt-ie8">
//if IE 8
  <html class="no-js lt-ie9">
//[if gt IE 8]><!
html.no-js
    //<![endif]
    block vars
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title #{title}
        meta(name='description', content='#{description}')
        meta(name='viewport', content='width=device-width')

        // build:css(.tmp, app) styles/main.css
        link(rel='stylesheet', href='/styles/main.css')
        link(rel='stylesheet', href='/fonts/style.css')
        link(rel='stylesheet', href='/bower_components/magnific-popup/dist/magnific-popup.css')
        // endbuild

        // Place favicon.ico and apple-touch-icon.png in the root directory
        include scripts


    body(id="#{template}")


        //data = langs = #{data}! = #{langs}!

        nav.nav-basement
            ul.nav-basement-options.unstyled.margin-top
                include header-links

        .outer-wrap

            #main-container.slide-pannel.effects
                .header-container.bg-dark-grey.white
                    include header

                #content(class="#{$.home._template}")
                    block content

                .footer-container
                    include footer

    // build:js({.tmp,app}) scripts/scripts.js
    // bower:js
    script(src='/bower_components/zepto/zepto.min.js')
    //-script(src='/bower_components/zeptojs/src/touch.js')
    script(src='/bower_components/magnific-popup/dist/jquery.magnific-popup.min.js')
    // endbower
    script(src='/scripts/app.js')
    // endbuild


