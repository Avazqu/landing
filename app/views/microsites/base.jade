        link(rel='stylesheet', href='#{localConfig.base_path}/bower_components/upplication-icons/dist/upplication-icons.css')
        link(rel='stylesheet', href='#{localConfig.base_path}/bower_components/materialize/dist/css/materialize.min.css', media='screen,projection')
        link(rel='stylesheet', href='#{localConfig.base_path}/bower_components/bootstrap/dist/css/bootstrap.min.css')

        block css

        // build:less(app) /styles/less/microsites.css
        link(rel='stylesheet', href='/styles/less/base/mediaqueries.less')
        link(rel='stylesheet', href='/styles/less/base/materialize-reserts.less')
        link(rel='stylesheet', href='/styles/less/base/common.less')
        link(rel='stylesheet', href='/styles/less/base/sliders.less')
        link(rel='stylesheet', href='/styles/less/base/modals.less')
        link(rel='stylesheet', href='/styles/less/base/alerts.less')
        link(rel='stylesheet', href='/styles/less/base/register.less')
        link(rel='stylesheet', href='/styles/less/base/header.less')
        link(rel='stylesheet', href='/styles/less/base/footer.less')
        link(rel='stylesheet', href='/styles/less/base/cookies.less')
        link(rel='stylesheet', href='/styles/less/microsites/microsites.less')
