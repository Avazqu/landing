        meta(name='viewport', content='width=device-width, initial-scale=1')

    body
        // MAIN HEADER (only logo and contact info)
        #home.header
            #move-top.top-header
                .container
                    .logo
                        a.no-events(href='index.html', title='#{header.logo.title}')
                            img(src='#{header.logo.url}', title='#{header.logo.title}', alt='#{header.logo.title}')
                    nav.top-nav
                        ul.top-nav-list.hide-ul
                            li.contact-info
                                .contact-info-grids
                                    .contact-info-left
                                        a.chat.modal-trigger(href='#free-trial', title='#{header.free_trial}') #{header.free_trial}
                                    .contact-info-right
                                        a.modal-trigger(href='#all-contact', title='#{header.telephone}') #{header.telephone}
                                        a.support(href='#{help_center.customer_service.email.link}', title='#{help_center.customer_service.email.alt_tag}') #{help_center.customer_service.email.title}
                        // Three animated bars for drop down main navbar in mobile
                        a#pull(href='')
                            span
                            span
                            span
                            span
        // MODAL :: FREE TRIAL
        #free-trial.modal.modal-upp
            include ../includes/modal-free.jade
        // MODAL :: CONTACT
        #all-contact.modal.modal-upp
            include ../includes/modal-contact.jade
        // INTRO (header and slider pic)
        block intro
        // FORM "TRY FREE 15 DAYS" (DESKTOP - LAPTOP)
        .col-xs-12.col-md-5.right.register-form.animated.fadeIn
            .row.register-top
                form(name="register", action="/register", method="post").col.s12.register-form-block
                    input(type="hidden", name="customerType", value="UPPLICATION")
                    p.error.general-error.display-none #{register.error.general}
                    .row.marBot10
                        .input-field.col.s12
                            input#app_name.validate(type='text', name='appName', required)
                            label(for='app_name') #{form.input.name}
                                p.error.display-none.register-appName-error
                        .input-field.col.s12
                            input#email.validate(type='email', name='email', required)
                            label(for='email') #{form.input.email}
                                p.error.display-none.register-email-error
                        .input-field.col.s12
                            input#password.validate(type='password', name='password', required)
                            label(for='password') #{form.input.pass}
                                p.error.display-none.register-password-error
                    .register-form-btn
                        button(type="submit", data-loading="#{register.loading}", data-text="#{register.call_to_action}").waves-effect.waves-light.btn-large.btn-upp
                            span #{form.call_to_action}
        // FORM "TRY FREE 15 DAYS" (MOBILE - TABLET)
        .col-xs-10.col-xs-offset-1.register-form-mobile.animated.fadeIn
            a.price-btn.btn-green.modal-trigger(href='#free-trial', title='#{header.free_trial}')
                span #{form.call_to_action}
        // FEATURES (Intro Tips)
        block features
        // FOOTER (Copyright)
        .footer-copyright
            .container
                span
                    i.icon.icon-copyright
                    | #{footer.brand_copy}
                i.icon.icon-dot
                em #{footer.signature}
                i.icon.icon-dot.terms-micro-hidden
                em.terms-micro-hidden #{footer.terms_microsites.warning}
                a.terms-micro-hidden(href='#{footer.terms_microsites.url}', title='#{footer.terms_microsites.title}', target='_blank') #{footer.terms_microsites.text}
        #cookies
            i#cookies-accept.icon.icon-cross
            p !{footer.cookies}
        // vendor js
        script(type="text/javascript", src='#{localConfig.base_path}/bower_components/jquery/dist/jquery.min.js')
        script(type="text/javascript", src='#{localConfig.base_path}/bower_components/materialize/dist/js/materialize.min.js')
        // endvendor
        // build:js(app) /scripts/app.v2.min.js
        script(type="text/javascript", src='/scripts/ua.js')
        script(type="text/javascript", src='/scripts/topic.js')
        script(type="text/javascript", src='/scripts/scroll.js')
        script(type="text/javascript", src='/scripts/v2/cookies.js')
        script(type="text/javascript", src='/scripts/v2/register.js')
        script(type="text/javascript", src='/scripts/v2/lang.js')
        // endbuild
        // smooth scrolling
        script(type='text/javascript').
            $(document).ready(function () {
                $('.scrollspy').scrollSpy();
                $('.slider').slider({
                    indicators: false,
                    interval: 4000
                });
                $('.modal-trigger').leanModal({
                    opacity: .7
                });
                $(".button-collapse").sideNav();
                $('.social-share').click(function () {
                    $(".social-nav").toggleClass("social-show");
                });
                $('#cookies-accept').click(function () {
                    $("#habla_window_div").addClass("bottomFix");
                });
                $('.lang-link').click(function () {
                    $("#dropdown-lang").toggleClass("notshow");
                });
                $('.lang-link').dropdown({
                            inDuration: 300,
                            outDuration: 225,
                            constrain_width: false,
                            gutter: 0,
                            belowOrigin: false,
                            alignment: 'left'
                        }
                );
            });
        // START MOBILE TOP NAVIGATION MENU
        script.
            $(function () {
                var $pull = $('#pull');
                menu = $('nav ul');
                menuHeight = menu.height();
                $pull.on('click', function (e) {
                    e.preventDefault();
                    menu.slideToggle();
                });
                $(window).resize(function () {
                    var w = $(window).width();
                    if (w > 320 && menu.is(':hidden')) {
                        menu.removeAttr('style');
                    }
                });
                $pull.click(function () {
                    $(".hide-ul").removeClass("hide-tabs");
                });
                var windowWidth = $(window).width();
                if (windowWidth < 769) {
                    $('.hide-tab').click(function () {
                        $(".hide-ul").addClass("hide-tabs");
                    });
                    $('#pull').click(function () {
                        $("#pull").toggleClass("open");
                    });
                }
            });
        // HEADER ANIMATION when you scrolling down or up
        script.
            $(window).scroll(function () {
                var scroll = $(window).scrollTop();
                if (scroll >= 250) {
                    $(".top-header").addClass("thiny-top-header");
                } else {
                    $(".top-header").removeClass("thiny-top-header");
                }
            });
        // end scripts
        block scripts
        include ../base/scripts-thirdparties.jade