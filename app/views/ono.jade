block vars
    - var template = $.ono._template
    - var title = $.ono._meta_title
    - var description = $.ono._meta_description
    - var keywords = $.ono._keywords
    - var canonical = $.ono._canonical
    - var cssClass = 'showcase'
doctype
//if lt IE 7
  <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="#{lang_html}" prefix="og: http://ogp.me/ns#">
//if IE 7
  <html class="no-js lt-ie9 lt-ie8" lang="#{lang_html}" prefix="og: http://ogp.me/ns#">
//if IE 8
  <html class="no-js lt-ie9" lang="#{lang_html}" prefix="og: http://ogp.me/ns#">
//[if gt IE 8]><!
html.no-js(lang="#{lang_html}", prefix="og: http://ogp.me/ns#")
    //<![endif]
    block vars
    head
        include scripts
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title #{title}
        meta(name='description', content='#{description}')
        meta(name='keywords', content='#{keywords}')
        meta(name='viewport', content='width=device-width')
        meta(name="google-site-verification", content="juFFMSMoqmlI8iFOJJs3EE2tObAcgyeywGbfKBrTXrU")
        meta(property='og:locale', content='es_ES')
        meta(property='og:type', content='article')
        meta(property='og:title', content='#{title}')
        meta(property='og:description', content='#{description}')
        meta(property='og:url', content='http://upplication.com/')
        meta(property='og:site_name', content='Upplication')
        meta(property='og:image', content='/images/upplication_rrss.png')
        meta(name="twitter:card", content="summary")
        meta(name="twitter:site", content="@upplication")
        meta(name="twitter:domain", content="Upplication")
        meta(name="twitter:creator", content="@upplication")
        meta(name="twitter:image:src", content="/images/upplication_rrss.png")
        link(type='text/plain', rel="author", href='#{localConfig.base_path}/humans.txt')
        link(rel="canonical", href="#{canonical}")
        link(rel="publisher", href="https://plus.google.com/u/0/b/104473837308143303881/104473837308143303881/posts")
        link(rel='stylesheet', href='/styles/main.css')
        link(rel="shortcut icon", href="http://upplication.es/favicon.ico")
        link(rel="profile", href="http://gmpg.org/xfn/11")
        link(rel='stylesheet', href='#{localConfig.base_path}/fonts/style.css')
        link(rel='stylesheet', href='#{localConfig.base_path}/bower_components/magnific-popup/dist/magnific-popup.css')
        link(rel='stylesheet', href='#{localConfig.base_path}/bower_components/animate.css/animate.min.css')
    body(id="#{template}", data-lang="#{lang}")
        nav.nav-basement
            ul.nav-basement-options.unstyled.margin-top.change-lang
                li.menu_txt
                    p.uppercase.white #{header.menu}
                li.change-lang.change-lang-menu
                    each lang in langs.codes
                        a(href="#{routing[template][lang.language_country]}", data-lang="#{lang.language_country}") #{lang.language_short_code}
                li.login_btn
                    a(href='#{$.external.nubo.url}') #{$.external.nubo.anchor}
        .outer-wrap
            #main-container.slide-pannel.effects
                .header-container.bg-vodafone-red
                    header.padding-top.bg-vodafone-red
                        a.logo.margin-bottom(href='#{localConfig.base_path}')
                            img(src="#{localConfig.base_path}/images/vodafone.png", alt="Upplication logo")

                        a.icon-list
                            span Menu
                        
                        nav.main-menu.uppercase.unstyled
                            ul#sections
                                li.menu_txt
                                    p.uppercase.white #{header.menu}
                                li.change-lang.change-lang-menu
                                    each lang in langs.codes
                                        a(href="#{routing[template][lang.language_country]}", data-lang="#{lang.language_country}") #{lang.language_short_code}
                                li.login_btn
                                    a(href='#{$.external.nubo.url}') #{$.external.nubo.anchor}

                #content(class='#{cssClass} ono')
                    include showcase_content
        
        script(type="text/javascript", src='#{localConfig.base_path}/bower_components/zepto/zepto.min.js')
        script(type="text/javascript", src='#{localConfig.base_path}/bower_components/zeptojs/src/touch.js')
        script(type="text/javascript", src='/scripts/app.min.js')