extends microsites/base.jade
block vars
    - var title = $.schools._meta_title
    - var description = $.schools._meta_description
    - var keywords = $.schools._keywords
    - var cssClass = 'schools'
block css
    // build:css({.tmp, app}) /styles/microsites.min.css
    link(rel='stylesheet', href='/styles/css/microsites/microsites.css')
    // endbuild
block intro
    // INTRO (header and slider pic)
    .slider.slides-to-mobile
        .mainHead
            h1 #{schools.slider.intro1}
            h2 !{schools.slider.intro2}
        ul.slides
            li
                img(src='#{localConfig.base_path}/images/microsites/microsites_bg_rest.jpg', alt='#{schools.pic}')
        .dippah.skew-right
block features
    // FEATURES (Intro Tips)
    .features.features-upp
        .container
            .features-grids.text-center.animated.zoomIn
                .col-md-4
                    .features-grid.centerImg.no-padd
                        i.icon.icon-book-open
                        span.f-icon
                        label
                        h3 !{schools.features.booking}
                .col-md-4
                    .features-grid.centerImg.no-padd
                        i.icon.icon-doc-text
                        span.f-icon1
                        label
                        h3 !{schools.features.notifications}
                .col-md-4
                    .features-grid.centerImg.no-padd
                        i.icon.icon-globe
                        span.f-icon2
                        label
                        h3 !{schools.features.delivery}
                .clearfix
    // MEET US (Team Pic and info data)
    .meet-us
        .col-sm-12.col-md-4.meet-us-paragraph.right
            .row
                .col-md-9.meet-us-details
                    h4 !{schools.meet_us.title}
                    p !{schools.meet_us.paragraph}
                    a.btn-call.btn-blue.animate-hover.hide-on-med-and-up(href='#{schools.meet_us.tel}', title='#{schools.meet_us.telephone}')
                        i.icon.icon-phone
                        span #{schools.meet_us.btn}
                    .meet-us-contact
                        p.meet-us-phone.hide-on-small-only
                            i.icon.icon-phone
                            span !{schools.meet_us.telephone}
                        a.meet-us-email(href='#{schools.meet_us.mailto}', title='#{schools.meet_us.email}')
                            i.icon.icon-mail
                            span !{schools.meet_us.email}
        .col-sm-12.col-md-8.meet-us-title.left
            img.responsive-img(src='#{localConfig.base_path}/images/microsites/marketing_team.jpg', alt='#{schools.marketing_team}')
        .clearfix
block scripts